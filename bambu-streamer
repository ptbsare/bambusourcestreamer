#!/bin/bash
set -e

# == Bambu Streamer Service Script ==
#
# v2.3 - æ›´æ–°æµåç§°ä¸º 'bambu'
#
# åŠŸèƒ½:
# 1. è‡ªåŠ¨å®‰è£…/æ ¡éªŒä¾èµ– (go2rtc, git repos, user plugins)
# 2. --login: äº¤äº’å¼ç™»å½• Bambu Cloud
# 3. --update: ä» Git æ›´æ–°è„šæœ¬
# 4. --cleanup: æ¸…ç†æ‰€æœ‰ç”±æœ¬è„šæœ¬ç”Ÿæˆçš„æ–‡ä»¶
# 5. (é»˜è®¤) å¯åŠ¨å’Œç®¡ç† bambu_source å’Œ go2rtc æœåŠ¡, å®ç° URL è‡ªåŠ¨åˆ·æ–°

# --- å…¨å±€é…ç½® ---
INSTALL_DIR="/config/.config/BambuStudio/cameratools"
BAMBU_STREAMER_REPO="https://github.com/ptbsare/bambusourcestreamer.git"
BAMBU_CLOUD_API_REPO="https://github.com/coelacant1/Bambu-Lab-Cloud-API.git"
GO2RTC_REPO="AlexxIT/go2rtc"

# æ´¾ç”Ÿè·¯å¾„
BAMBU_STREAMER_SRC_DIR="$INSTALL_DIR/bambusourcestreamer_src" # ä¸´æ—¶å…‹éš†ç›®å½•
BAMBU_CLOUD_API_DIR="$INSTALL_DIR/Bambu-Lab-Cloud-API"
FEEDER_SCRIPT="$INSTALL_DIR/bambu_fifo_feeder.sh"
URL_GENERATOR_SCRIPT="$INSTALL_DIR/bambu_url_generator.py"
GO2RTC_BIN="$INSTALL_DIR/go2rtc"
BAMBU_SOURCE_BIN="$INSTALL_DIR/bambu_source"
CONFIG_FILE="$INSTALL_DIR/go2rtc_fifo.yaml"
FEEDER_PID_FILE="/tmp/bambu_fifo_feeder.pid"

# --- æ¨¡å—åŒ–å‡½æ•° ---

log() { echo "[$(date +'%Y-%m-%d %H:%M:%S')] $1 ($2)"; }

install_and_verify_dependencies() {
    log "ğŸ” æ­£åœ¨æ£€æŸ¥å’Œå®‰è£…ä¾èµ–é¡¹..." "Checking and installing dependencies..."
    mkdir -p "$INSTALL_DIR"

    for cmd in git curl unzip jq gosu; do
        if ! command -v $cmd &> /dev/null; then
            log "ğŸ“¦ æœªæ‰¾åˆ° '$cmd'ï¼Œæ­£åœ¨å°è¯•ä½¿ç”¨ apt å®‰è£…..." "Command '$cmd' not found, attempting to install via apt..."
            if command -v apt-get &> /dev/null; then apt-get update && apt-get install -y $cmd; else
                log "âŒ æ— æ³•è‡ªåŠ¨å®‰è£… '$cmd'ã€‚è¯·æ‰‹åŠ¨å®‰è£…åé‡è¯•ã€‚" "Failed to auto-install '$cmd'. Please install it manually and retry."; exit 1; fi
        fi
    done

    if [ ! -f "$BAMBU_SOURCE_BIN" ]; then
        log "âŒ é”™è¯¯ï¼šæ ¸å¿ƒç»„ä»¶ '$BAMBU_SOURCE_BIN' æœªæ‰¾åˆ°ã€‚" "Error: Core component '$BAMBU_SOURCE_BIN' not found."
        log "   è¯·æ‰“å¼€ Bambu Studio -> Go Live -> å®‰è£… 'è™šæ‹Ÿæ‘„åƒå¤´å·¥å…·' æ’ä»¶ã€‚" "   Please open Bambu Studio -> Go Live -> Install 'Virtual Camera Tools' plugin."; exit 1;
    else log "âœ… bambu_source å·²ç”±ç”¨æˆ·å®‰è£…ã€‚" "bambu_source is already installed by the user."; fi

    if [ ! -f "$GO2RTC_BIN" ]; then
        log "ğŸ“¦ æ­£åœ¨ä¸‹è½½æœ€æ–°ç‰ˆ go2rtc..." "Downloading the latest version of go2rtc..."; CPU_ARCH=$(uname -m);
        case $CPU_ARCH in "x86_64") GO2RTC_ARCH="linux_amd64";; "aarch64") GO2RTC_ARCH="linux_arm64";;
            "armv7l") GO2RTC_ARCH="linux_armv7";; *) log "âŒ ä¸æ”¯æŒçš„ CPU æ¶æ„: $CPU_ARCH" "Unsupported CPU architecture: $CPU_ARCH"; exit 1;; esac
        API_URL="https://api.github.com/repos/$GO2RTC_REPO/releases/latest"
        DOWNLOAD_URL=$(curl -s $API_URL | jq -r ".assets[] | select(.name | endswith(\"$GO2RTC_ARCH\")) | .browser_download_url")
        if [ -z "$DOWNLOAD_URL" ]; then log "âŒ æ— æ³•æ‰¾åˆ° go2rtc ä¸‹è½½é“¾æ¥ã€‚" "Could not find go2rtc download link." && exit 1; fi
        curl -sL "$DOWNLOAD_URL" -o "$GO2RTC_BIN"; chmod +x "$GO2RTC_BIN"; log "âœ… go2rtc ä¸‹è½½å®Œæˆã€‚" "go2rtc downloaded successfully.";
    else log "âœ… go2rtc å·²å­˜åœ¨ã€‚" "go2rtc already exists."; fi

    if [ ! -d "$BAMBU_STREAMER_SRC_DIR" ]; then
        log "ğŸ“¦ å…‹éš† bambusourcestreamer (depth=1)..." "Cloning bambusourcestreamer (depth=1)..."
        git clone --depth=1 "$BAMBU_STREAMER_REPO" "$BAMBU_STREAMER_SRC_DIR"
    else log "âœ… bambusourcestreamer ä»“åº“å·²å­˜åœ¨ã€‚" "bambusourcestreamer repository already exists."; fi
    log "æ­£åœ¨ä»æºç åŒæ­¥è„šæœ¬å’Œé…ç½®..." "Syncing scripts and configuration from source..."
    cp "$BAMBU_STREAMER_SRC_DIR/bambu_fifo_feeder.sh" "$FEEDER_SCRIPT"
    cp "$BAMBU_STREAMER_SRC_DIR/bambu_url_generator.py" "$URL_GENERATOR_SCRIPT"
    cp "$BAMBU_STREAMER_SRC_DIR/go2rtc_fifo.yaml" "$CONFIG_FILE"
    chmod +x "$FEEDER_SCRIPT"

    if [ ! -d "$BAMBU_CLOUD_API_DIR" ]; then
        log "ğŸ“¦ å…‹éš† Bambu-Lab-Cloud-API (depth=1)..." "Cloning Bambu-Lab-Cloud-API (depth=1)..."
        git clone --depth=1 "$BAMBU_CLOUD_API_REPO" "$BAMBU_CLOUD_API_DIR"
    else log "âœ… Bambu-Lab-Cloud-API ä»“åº“å·²å­˜åœ¨ã€‚" "Bambu-Lab-Cloud-API repository already exists."; fi
    log "ğŸ æ­£åœ¨å°† Bambu-Lab-Cloud-API å®‰è£…ä¸º Python åŒ…..." "Installing Bambu-Lab-Cloud-API as a Python package..."; pip install "$BAMBU_CLOUD_API_DIR"
    log "âœ… æ‰€æœ‰ä¾èµ–é¡¹å‡å·²æ»¡è¶³ã€‚" "All dependencies are satisfied."
}

login_to_bambu_cloud() {
    install_and_verify_dependencies
    log "ğŸ”‘ åˆ‡æ¢åˆ° 'abc' ç”¨æˆ·è¿›è¡Œäº¤äº’å¼ç™»å½•..." "Switching to 'abc' user for interactive login..."; log "   è¯·æ ¹æ®æ¥ä¸‹æ¥çš„æç¤ºæ“ä½œã€‚" "   Please follow the prompts."
    gosu abc python3 "$URL_GENERATOR_SCRIPT" --login
    log "âœ… ç™»å½•æµç¨‹å®Œæˆã€‚" "Login process completed."; exit 0
}

update_scripts() {
    log "ğŸ”„ æ­£åœ¨ä» Git æ›´æ–°è„šæœ¬..." "Updating scripts from Git..."
    if [ -d "$BAMBU_STREAMER_SRC_DIR" ]; then
        cd "$BAMBU_STREAMER_SRC_DIR"; git pull; cd - > /dev/null;
        log "æ­£åœ¨ä»æºç åŒæ­¥è„šæœ¬å’Œé…ç½®..." "Syncing scripts and configuration from source..."
        cp "$BAMBU_STREAMER_SRC_DIR/bambu_fifo_feeder.sh" "$FEEDER_SCRIPT"
        cp "$BAMBU_STREAMER_SRC_DIR/bambu_url_generator.py" "$URL_GENERATOR_SCRIPT"
        cp "$BAMBU_STREAMER_SRC_DIR/go2rtc_fifo.yaml" "$CONFIG_FILE"
        chmod +x "$FEEDER_SCRIPT"
        log "âœ… è„šæœ¬æ›´æ–°å®Œæˆã€‚" "Scripts updated successfully."
    else
        log "âš ï¸  æœªæ‰¾åˆ°æºç ç›®å½•ï¼Œè¯·å…ˆè¿è¡Œä¸€æ¬¡å®‰è£…ã€‚" "Source directory not found, please run the installation first."; exit 1;
    fi
    if [ -d "$BAMBU_CLOUD_API_DIR" ]; then
        cd "$BAMBU_CLOUD_API_DIR"; git pull; cd - > /dev/null;
        log "ğŸ æ­£åœ¨æ›´æ–° Python åŒ…..." "Updating Python package..."; pip install --upgrade "$BAMBU_CLOUD_API_DIR"
        log "âœ… Python åŒ…æ›´æ–°å®Œæˆã€‚" "Python package updated successfully."
    else
        log "âš ï¸  æœªæ‰¾åˆ° API åº“ç›®å½•ï¼Œè¯·å…ˆè¿è¡Œä¸€æ¬¡å®‰è£…ã€‚" "API library directory not found, please run the installation first."; exit 1;
    fi
    exit 0
}

cleanup_files() {
    log "ğŸ§¹ æ­£åœ¨è¿›è¡Œå½»åº•æ¸…ç†..." "Performing a full cleanup..."
    rm -f "$FEEDER_SCRIPT" "$URL_GENERATOR_SCRIPT" "$CONFIG_FILE" "$GO2RTC_BIN"
    rm -rf "$BAMBU_STREAMER_SRC_DIR" "$BAMBU_CLOUD_API_DIR"
    log "âœ… æ¸…ç†å®Œæˆã€‚" "Cleanup complete."
    log "   ä¿ç•™çš„å†…å®¹: $BAMBU_SOURCE_BIN (ç”±ç”¨æˆ·é€šè¿‡ Bambu Studio æ’ä»¶å®‰è£…)ã€‚" "   Preserved: $BAMBU_SOURCE_BIN (installed by the user via Bambu Studio plugin)."
    exit 0
}

start_service() {
    cd "$INSTALL_DIR" || (log "âŒ æ— æ³•è¿›å…¥å®‰è£…ç›®å½•: $INSTALL_DIR" "Cannot enter installation directory: $INSTALL_DIR" && exit 1)
    log "ğŸš€ Bambu FIFO + go2rtc æœåŠ¡å¯åŠ¨..." "Starting Bambu FIFO + go2rtc service..."
    
    cleanup_processes() {
        log "ğŸ›‘ æ­£åœ¨åœæ­¢æ‰€æœ‰æœåŠ¡..." "Stopping all services..."
        if [ -f "$FEEDER_PID_FILE" ]; then
            FEEDER_PID=$(cat "$FEEDER_PID_FILE" 2>/dev/null)
            if [ -n "$FEEDER_PID" ] && kill -0 "$FEEDER_PID" 2>/dev/null; then
                log "å‘ FIFO feeder (PID: $FEEDER_PID) å‘é€ SIGTERM ä¿¡å·..." "Sending SIGTERM to FIFO feeder (PID: $FEEDER_PID)..."
                kill -TERM "$FEEDER_PID"; wait "$FEEDER_PID"; log "âœ… FIFO feeder å·²åœæ­¢ã€‚" "FIFO feeder stopped.";
            fi; rm -f "$FEEDER_PID_FILE"
        fi
        rm -f /tmp/bambu_video.fifo; log "âœ… æ‰€æœ‰æœåŠ¡å·²æ¸…ç†å®Œæ¯•ã€‚" "All services have been cleaned up."
    }
    trap 'cleanup_processes' SIGINT SIGTERM

    if [ -f "$FEEDER_PID_FILE" ] && kill -0 "$(cat $FEEDER_PID_FILE 2>/dev/null)" 2>/dev/null; then
        log "âš ï¸ FIFO feeder å·²åœ¨è¿è¡Œ (PID: $(cat $FEEDER_PID_FILE))ã€‚" "FIFO feeder is already running (PID: $(cat $FEEDER_PID_FILE))."; SKIP_FEEDER=true;
    else rm -f "$FEEDER_PID_FILE"; fi

    if [ "$SKIP_FEEDER" != "true" ]; then
        log "ğŸ¥ å¯åŠ¨ FIFO feeder..." "Starting FIFO feeder..."; "$FEEDER_SCRIPT" &
        FEEDER_PID=$!; echo $FEEDER_PID > "$FEEDER_PID_FILE";
        log "âœ… FIFO feeder å·²å¯åŠ¨ (PID: $FEEDER_PID)" "FIFO feeder started (PID: $FEEDER_PID)."; sleep 2;
    fi

    log "ğŸŒ å¯åŠ¨ go2rtc æœåŠ¡å™¨..." "Starting go2rtc server..."
    log "  Web UI:  http://localhost:1984/" ""; log "  RTSP:    rtsp://localhost:8554/bambu" ""

    "$GO2RTC_BIN" -config "$CONFIG_FILE" &
    GO2RTC_PID=$!; wait "$GO2RTC_PID";
    cleanup_processes
}

# --- ä¸»é€»è¾‘ ---
if [[ -d "/custom-services.d" && ! -f "/custom-services.d/bambu-streamer" ]]; then
    log "æ­£åœ¨å®‰è£…æœåŠ¡ä»¥ä¾¿å®¹å™¨å¯åŠ¨æ—¶è‡ªåŠ¨è¿è¡Œ..." "Installing service to run automatically on container start..."
    cp "${BASH_SOURCE[0]}" /custom-services.d/bambu-streamer
    chmod +x /custom-services.d/bambu-streamer
fi

case "$1" in
    --login)    login_to_bambu_cloud;;
    --install)  install_and_verify_dependencies; log "âœ… å®‰è£…/æ ¡éªŒå®Œæˆã€‚" "Installation/verification complete."; exit 0;;
    --update)   update_scripts;;
    --cleanup)  cleanup_files;;
    *)          install_and_verify_dependencies; start_service;;
esac
